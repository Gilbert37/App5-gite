xml version="1.0" encoding="UTF-8"?>

<widget xmlns  = "http://www.w3.org/ns/widgets"
 xmlns:gap ="http://phonegap.com/ns/1.0"
 id ="com.phonegap.app5"
 version ="1.0.0">

<name>Notificaciones de celulares</name>

<description>
Aplication que acciona botones
</description>

<author href="https://build.phonegap.com" email="benedetti345@outlook.com">
   Ariadna Gilbert Flores 
</author>

<!--Personaliza la aplicacion y plataforma-->
<preference name="orientation"  value="default"/>
<--<preference name="orientation"  value="portrait"/>
<preference name="orientation"  value="landscape"/>-->
<preference name="target-device"  value="universal"/>
<preference name="fullscreen"  value="true"/>
<preference name="android-installLocation"  value="auto"/>
<preference name="permissions"  value="INTERNET"/>

<!--Plugins-->
<!--Core plugins-->
<plugin name="cordiva-plugin-debice" spec="~1.1.4"/>
<plugin name="cordiva-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordiva-plugin-dialogs" spec="~1.3.1"/>

<!--<plugin name="cordiva-plugin-geolocation" source="npm"/>-->
 <!--Third part plugins-->

 <!--colocar icono app-->
<icon ="res/icons/Apps-Notifications-icon.png"/>

</widget>